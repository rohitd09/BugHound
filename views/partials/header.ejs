  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">BugHound</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">View Reports</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/bugreport">Report a Bug</a>
              </li>
              <% if(currentUser) { %>
                <% if (currentUser.user_level === "3") { %>
                  <li class="nav-item">
                    <a class="nav-link" href="/admin">Admin Panel</a>
                  </li>
                <% } %>
              <% } %>
            </ul>
            <% if(!currentUser) { %>
              <ul class="navbar-nav my-0">
                <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
              </ul>
            <% } else { %>
              <ul class="navbar-nav my-0">
                <li class="nav-item"><a class="nav-link" href="#">Signed in as <%= currentUser.first_name %></a></li>
                <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
              </ul>
            <% } %>
          </div>
        </div>
    </nav>