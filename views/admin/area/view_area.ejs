<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>View Area</title>
        
        <!-- Bootstrap 5 CSS -->
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
        <style>
            body, html {
                height: 100%;
                margin: 0;
            }
            body{
                background: linear-gradient(90deg, #f9f98f, #676767);
            }


            body::before {
                content: '';
                position: fixed; 
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background-image: url('lb.png');
                background-size: 30%;
                background-position: center;
                background-repeat: no-repeat;
                opacity: 0.7; 
                z-index: -1; /* Place the background behind the content */
            }
            .icon-pencil i {
                color: blue; /* Sets the pencil icon color to gray */
            }

            .icon-trash i {
                color: red; /* Sets the trash icon color to red */
            }

        </style>

    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Area Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="/admin" class="nav-link"><i class="fa fa-angle-left" aria-hidden="true"></i>Go Back</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container mt-4">
            <h2 class="mb-4 text-center">Area List</h2>
            <a href="/exportAreasXml" class="btn btn-primary">Download Areas XML</a>

            <table class="table table-striped">
                <tr class="table-dark">
                    <th>Area Id</th>
                    <th>Area Name</th>
                    <th>Program</th>
                    <th>Action</th>
                </tr>
                <% areas.forEach((area) => { %>
                    <tr class="table-light">
                        <td><%= area.area_id %></td>
                        <td><%= area.area_name %></td>
                        <td><%= area.program_name %>, <%= area.program_category %>, <%= area.program_version %></td>
                        <td><a href="/editArea/<%= area.area_id %>" class="icon-pencil"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> | <a href="/deleteArea/<%= area.area_id %>?_method=DELETE" class="icon-trash"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                    </tr>
                <% }) %>
            </table>
        </div>

        <script src="js/register.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
    </body>
</html>